<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="탐구 2\n(30분)"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"></TextView>
    <TextView
        android:id="@+id/TextView_time_science2_tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="60sp"
        android:text="00:00"
        ></TextView>
    <LinearLayout
        android:id="@+id/LinearLayout_btns_tt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginHorizontal="30dp"
        android:paddingTop="100dp"
        android:layout_alignTop="@id/TextView_time_science2_tt">
        <Button
            android:id="@+id/btn_start_pause_tt_science2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/btn_design1"
            android:textColor="#FFFFFF"></Button>
        <Button
            android:id="@+id/btn_reset_tt_science2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초기화"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/btn_design1"
            android:textColor="#FFFFFF"></Button>
        <Button
            android:id="@+id/btn_stop_save_tt_science2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중지"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/btn_design1"
            android:textColor="#FFFFFF"></Button>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_next_science2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_design_next"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:visibility="invisible"></ImageButton>

</RelativeLayout>