<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="4dp">
        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/TextView_recyclerview_item_date_tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000-00-00"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="10dp"
                ></TextView>
            <TextView
                android:id="@+id/TextView_recyclerview_item_title_tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="30dp"
                app:layout_constraintTop_toBottomOf="@id/TextView_recyclerview_item_date_tt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"></TextView>

            <TextView
                android:id="@+id/TextView_menu_recyclerview_item_tt"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="&#8942;"
                android:textAlignment="center"
                android:textAppearance="?android:textAppearanceLarge"
                ></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--날짜, 과목, 시간, 메뉴-->

    </androidx.cardview.widget.CardView>

</LinearLayout>
<!--날짜, 과목, 시간, 메뉴-->