<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">
    <TextView
        android:id="@+id/TextView_analogClock_math"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수학 (100분)\n10:30~12:10"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        ></TextView>

    <com.examtimer1.CustomAnalogClock_math
        android:id="@+id/analogClock_math"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></com.examtimer1.CustomAnalogClock_math>

    <Button
        android:id="@+id/btn_start_analogClock_math"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_weight="1"
        android:background="@drawable/btn_design1"
        android:text="시작"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/analogClock_math"
        app:layout_constraintBottom_toBottomOf="parent"
        ></Button>

    <ImageButton
        android:id="@+id/btn_toDigitalMode_math"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/btn_design_digital_clock"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>


</androidx.constraintlayout.widget.ConstraintLayout>