<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
        <TextView
            android:id="@+id/TextView_record_title_science"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/LinearLayout_btns_record_science"
            android:text="타이머 기록-탐구"
            android:textSize="30dp"
            android:textAlignment="center">
        </TextView>
        <LinearLayout
            android:id="@+id/LinearLayout_btns_record_science"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:weightSum="4"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_record_history"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="한국사"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginVertical="10dp"
                android:background="@drawable/btn_design1"
                android:textColor="#FFFFFF"
                ></Button>
            <Button
                android:id="@+id/btn_record_science1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="탐구 1"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginVertical="10dp"
                android:background="@drawable/btn_design1"
                android:textColor="#FFFFFF"
                ></Button>
            <Button
                android:id="@+id/btn_record_science2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="탐구 2"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginVertical="10dp"
                android:background="@drawable/btn_design1"
                android:textColor="#FFFFFF"
                ></Button>
            <Button
                android:id="@+id/btn_record_science_total"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="탐구 전체"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginVertical="10dp"
                android:background="@drawable/btn_design1"
                android:textColor="#FFFFFF"
                ></Button>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id_for_test"></com.google.android.gms.ads.AdView>
</RelativeLayout>