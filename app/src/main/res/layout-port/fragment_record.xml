<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingDefaultResource"
        android:layout_marginBottom="100dp">

        <TextView
            android:id="@+id/TextView_record_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/LinaerLayout_btns_record"
            android:text="기록"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"/>
        <LinearLayout
            android:id="@+id/LinaerLayout_btns_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_record_Korean"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="국어"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginVertical="10dp"
                android:background="@drawable/btn_design1"
                android:textColor="#FFFFFF"></Button>
            <Button
                android:id="@+id/btn_record_math"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="수학"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginVertical="10dp"
                android:background="@drawable/btn_design1"
                android:textColor="#FFFFFF"></Button>
            <Button
                android:id="@+id/btn_record_English"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="영어"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginVertical="10dp"
                android:background="@drawable/btn_design1"
                android:textColor="#FFFFFF"></Button>
            <Button
                android:id="@+id/btn_record_science"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="탐구"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginVertical="10dp"
                android:background="@drawable/btn_design1"
                android:textColor="#FFFFFF"></Button>
            <Button
                android:id="@+id/btn_record_foriegnLanguage"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="제 2외국어 / 한문"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginVertical="10dp"
                android:background="@drawable/btn_design1"
                android:textColor="#FFFFFF"></Button>
            <Button
                android:id="@+id/btn_record_total"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="전체"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginVertical="10dp"
                android:background="@drawable/btn_design1"
                android:textColor="#FFFFFF"></Button>>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>