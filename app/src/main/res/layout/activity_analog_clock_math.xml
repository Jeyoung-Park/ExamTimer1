<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/TextView_analogClock_math"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수학 (100분)\n10:30~12:10"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        ></TextView>

    <com.examtimer1.CustomAnalogClock_math
        android:id="@+id/analogClock_math"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_centerInParent="true"
        ></com.examtimer1.CustomAnalogClock_math>

    <Button
        android:id="@+id/btn_start_analogClock_math"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_weight="1"
        android:background="@drawable/btn_design1"
        android:text="시작"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"></Button>

    <ImageButton
        android:id="@+id/btn_toDigitalMode_math"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/btn_design_digital_clock"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"></ImageButton>


</RelativeLayout>