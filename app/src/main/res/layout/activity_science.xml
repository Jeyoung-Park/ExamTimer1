<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/TextView_title_science"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="탐구 (102분)"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"></TextView>
    <LinearLayout
        android:id="@+id/LinearLayout_btns_science_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/TextView_title_science"
        android:layout_marginTop="90dp">
        <Button
            android:id="@+id/btn_oneScience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탐구 영역 1개\n(30분)"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/btn_design1"
            android:textColor="#FFFFFF">
        </Button>
        <Button
            android:id="@+id/btn_threeScience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탐구 영역 3개\n(102분)"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/btn_design1"
            android:textColor="#FFFFFF">
        </Button>

    </LinearLayout>
    <TextView
        android:id="@+id/TextView_time_science"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="60sp"
        android:text="00:00"
        ></TextView>
    <LinearLayout
        android:id="@+id/LinearLayout_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginHorizontal="30dp"
        android:paddingTop="100dp"
        android:layout_alignTop="@id/TextView_time_science">
        <Button
            android:id="@+id/btn_start_pause_English"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/btn_design1"
            android:textColor="#FFFFFF"></Button>
        <Button
            android:id="@+id/btn_reset_English"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초기화"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/btn_design1"
            android:textColor="#FFFFFF"></Button>
        <Button
            android:id="@+id/btn_stop_save_English"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중지"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/btn_design1"
            android:textColor="#FFFFFF"></Button>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save_end_English"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:text="저장 &amp; 종료"
        android:visibility="invisible"
        android:background="@drawable/btn_design1"
        android:textColor="#FFFFFF"></Button>

</RelativeLayout>