<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TextView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="과목별 타이머"
        android:textAlignment="center"
        android:textSize="30sp"></TextView>

    <LinearLayout
        android:id="@+id/LinearLayout_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <Button
            android:id="@+id/btn_Korean"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:text="국어"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_design1"
            android:textColor="#FFFFFF"></Button>
        <Button
            android:id="@+id/btn_math"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:text="수학"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_design1"
            android:textColor="#FFFFFF"></Button>
        <Button
            android:id="@+id/btn_English"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:text="영어"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_design1"
            android:textColor="#FFFFFF"></Button>
        <Button
            android:id="@+id/btn_science"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:text="탐구"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_design1"
            android:textColor="#FFFFFF"></Button>
        <Button
            android:id="@+id/btn_foreignLanguage"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:text="제2외국어/한문"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_design1"
            android:textColor="#FFFFFF"></Button>

    </LinearLayout>

</RelativeLayout>