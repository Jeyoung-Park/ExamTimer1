<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/TextView_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="2020 수능"
        android:fontFamily="@font/scdream9"/>
    <TextView
        android:id="@+id/TextView_Dday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TextView_main_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        android:text="D-day"
        android:textSize="40dp"
        android:layout_marginTop="30dp"></TextView>
    <Button
        android:id="@+id/btn_start_totalTimer"
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/TextView_Dday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="시작하기"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        android:background="@drawable/btn_design1"
        android:textColor="#FFFFFF"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>